<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" focusTraversable="true" prefHeight="300.0" prefWidth="300.0" scaleShape="false" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.collectors.controller.LoginController">
   <children>
      <Label alignment="CENTER" text="Collectors">
         <font>
            <Font size="20.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="nicknameLabel" maxWidth="200.0" minWidth="200.0" onKeyPressed="#loginOnEnter" promptText="Inserisci nickname">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></TextField>
      <TextField fx:id="emailLabel" maxWidth="200.0" minWidth="200.0" onKeyPressed="#loginOnEnter" promptText="Inserisci email">
         <VBox.margin>
            <Insets bottom="20.0" top="20.0" />
         </VBox.margin>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </TextField>
      <Label fx:id="exceptionLabel" />
      <HBox>
         <children>
            <Button fx:id="registerButton" mnemonicParsing="false" onAction="#register" text="Registrati">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <HBox />
            <Button fx:id="loginButton" maxWidth="66.0" minWidth="66.0" mnemonicParsing="false" onAction="#login" text="Login">
               <HBox.margin>
                  <Insets left="67.0" />
               </HBox.margin>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
